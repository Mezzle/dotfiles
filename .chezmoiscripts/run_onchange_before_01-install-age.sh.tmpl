#!/bin/sh

{{ if eq .chezmoi.os "darwin" -}}
    brew install age
{{ else if (and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu")) -}}
  {{- if lt .chezmoi.osRelease.versionID "22.04" -}}
    wget -O {{ .chezmoi.homeDir }}/.local/bin/age https://dl.filippo.io/age/latest?for=linux/{{ .chezmoi.arch }}
    chmod a+x {{ .chezmoi.homeDir }}/.local/bin/age
  {{- else -}}
    sudo apt install age -y
{{- end }}
